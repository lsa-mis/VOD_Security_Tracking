<div class="bg-white shadow sm:rounded-lg">
  <div class="px-4 sm:p-6">
    <%= form_for [tdx_ticket_resource, TdxTicket.new], html: { class: "sm:flex sm:items-center" } do |f| %>
      <div class="w-full sm:max-w-4xl">
        <%= f.label :ticket_link, "Add a ticket link", class: "sr-only" %>
        <%= f.text_field :ticket_link, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
      <%= f.submit 'Add Link', class: "mt-3 w-full inline-flex items-center justify-center px-4 py-2 border border-transparent shadow-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm" %>
    <% end %>
  </div>
</div> 
