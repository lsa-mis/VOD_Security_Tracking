<header class="w-full h-75 bg-um_blue text-white ">
  <nav class="flex items-center justify-between flex-wrap p-6">
    <div class="flex items-center flex-no-shrink text-white mr-6">
      <%= image_pack_tag "Technology_Services_logo_rgb_reverse.png", alt:"LSATS Logo", size: "323x75"  %>
    </div>
    <div class="block lg:hidden">
      <button class="flex items-center px-3 py-2 border rounded text-teal-lighter border-teal-light hover:text-white hover:border-white">
        <svg class="h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
      </button>
    </div>
    <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
      <div class="lg:flex-grow">
      <% if user_signed_in? or admin_user_signed_in? %>
          <%= link_to "Dashboard", dashboard_path, class: "mr-4" %>
          <%= link_to "DPA Exceptions", dpa_exceptions_path, class: "mr-4" %>
          <%= link_to "It Security Incidents", it_security_incidents_path, class: "mr-4" %>
          <%= link_to "Legacy Os Record", legacy_os_records_path, class: "mr-4" %>
          <%= link_to "Sensitive Data System", sensitive_data_systems_path, class: "mr-4" %>
      <% end %>
      </div>

      <div class="w-full block flex sm:items-center sm:w-auto">
        <div class= "flex justify-end">
          <% if user_signed_in? %>
            <div >
              <%= link_to current_user.email, edit_user_registration_path, class: "inline-block text-um_yellow mr-4", title: "Edit profile" %>
            </div>
            <div>
              <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "btn-login" %>
            </div>
          <% else %>
            <div class="mt-2">
              <%= link_to 'Sign In', new_user_session_path, class: "btn-login" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>
