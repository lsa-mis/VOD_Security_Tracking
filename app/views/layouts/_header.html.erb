<header class="w-full h-75 bg-um_blue text-white ">
  <nav class="flex items-center justify-between flex-wrap p-6">
    <div class="flex items-center flex-no-shrink text-white mr-6">
      <%= image_pack_tag "Technology_Services_logo_rgb_reverse.png", alt:"LSATS Logo", size: "323x75" %>
    </div>
    <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
      <div class="lg:flex-grow">
        <% if user_signed_in? && session[:duo_auth] %>
            <%= link_to "Dashboard", dashboard_path, class: "mr-4" %>
            <% if policy(DpaException).any_action? %>
              <%= link_to "DPA Exceptions", dpa_exceptions_path, class: "mr-4" %>
            <% end %>
            <% if policy(ItSecurityIncident).any_action? %>
              <%= link_to "IT Security Incidents", it_security_incidents_path, class: "mr-4" %>
            <% end %>
            <% if policy(LegacyOsRecord).any_action? %>
              <%= link_to "Legacy OS Record", legacy_os_records_path, class: "mr-4" %>
            <% end %>
            <% if policy(SensitiveDataSystem).any_action? %>
              <%= link_to "Sensitive Data System", sensitive_data_systems_path, class: "mr-4" %>
            <% end %>
            <% if @admin_access %>
              <%= link_to "Reports", reports_path, class: "mr-4" %>
            <% end %>
        <% end %>
      </div>

      <div class="w-full block sm:items-center sm:w-auto">
        <div class= "flex justify-end">
          <% if user_signed_in? %>
            <div class= "text-um_yellow mr-4">
              <%= current_user.username %>
            </div>
            <div>
              <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "btn-login" %>
            </div>
          <% else %>
            <div class="mt-2">
              <%= link_to 'Log in', new_user_session_path, class: "btn-login" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</header>
