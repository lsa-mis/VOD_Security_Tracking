<% link = pagy_anchor(pagy) -%>
<nav aria-label="pager" class="pagy_nav pagination mb-6" role="navigation">
  <% if pagy.prev                -%>  <span class="page prev"><%== link.call(pagy.prev, pagy_t('pagy.prev'), aria_label: pagy_t('pagy.aria_label.prev')) %></span>
  <% else                        -%>  <span class="page prev disabled"><%== pagy_t('pagy.prev') %></span>
  <% end                         -%>
  <% pagy.series.each do |item|  -%>
  <%   if    item.is_a?(Integer) -%>  <span class="page"><%== link.call(item) %></span>
  <%   elsif item.is_a?(String)  -%>  <span class="page current"><%= item %></span>
  <%   elsif item == :gap        -%>  <span class="page gap"><%== pagy_t('pagy.gap') %></span>
  <%   end                       -%>
  <% end                         -%>
  <% if pagy.next                -%>  <span class="page next"><%== link.call(pagy.next, pagy_t('pagy.next'), aria_label: pagy_t('pagy.aria_label.next')) %></span>
  <% else                        -%>  <span class="page next disabled"><%== pagy_t('pagy.next') %></span>
  <% end                         -%>
</nav>