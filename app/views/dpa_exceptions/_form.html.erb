<%= form_with(model: dpa_exception) do |form| %>
  <% if dpa_exception.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(dpa_exception.errors.count, "error") %> prohibited this dpa_exception from being saved:</h2>

      <ul>
        <% dpa_exception.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-container">
    <div>
      <h3 class="instruction-header">
        Special Fields
      </h3>
      <ul class="instruction-container">
        <li class="mandatory">mandatory fields</li>
        <li class="required">required fields => to save as an incomplete record without these fields click the [Save Incomplete Form] button.</li>
      </ul>
    </div>

    <div class="field-container">
      <div class="field">
        <%= form.label :review_date_exception_first_approval_date, required: true, class: "required" %>
        <%= form.text_field :review_date_exception_first_approval_date,
          data: {
            controller: "flatpickr",
            flatpickr_date_format: "Y-m-d",
            flatpickr_min_date: Time.zone.now
          },
          required: true 
        %>
      </div>

      <div class="field">
        <%= form.label :third_party_product_service, class: "mandatory" %>
        <%= form.text_area :third_party_product_service, required: true  %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :used_by, class: "required" %>
        <%= form.text_field :used_by %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :point_of_contact %>
        <%= form.text_field :point_of_contact %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :review_findings %>
        <%= form.text_area :review_findings %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :review_summary %>
        <%= form.text_area :review_summary %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :lsa_security_recommendation %>
        <%= form.text_area :lsa_security_recommendation %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :lsa_security_determination %>
        <%= form.text_area :lsa_security_determination %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :lsa_security_approval, class: "required" %>
        <%= form.text_field :lsa_security_approval %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :lsa_technology_services_approval, class: "required" %>
        <%= form.text_field :lsa_technology_services_approval %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :exception_approval_date_exception_renewal_date_due, class: "required" %>
        <%= form.text_field :exception_approval_date_exception_renewal_date_due,
          data: {
            controller: "flatpickr",
            flatpickr_date_format: "Y-m-d",
            flatpickr_min_date: Time.zone.now
          }
        %>
      </div>

      <div class="field">
        <%= form.label :review_date_exception_review_date, class: "required" %>
        <%= form.text_field :review_date_exception_review_date,
          data: {
            controller: "flatpickr",
            flatpickr_date_format: "Y-m-d",
            flatpickr_min_date: Time.zone.now
          }
        %>
      </div>

      <div class="field">
        <%= form.label :notes %>
        <%= form.text_field :notes %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :sla_agreement %>
        <%= form.text_field :sla_agreement %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :sla_attachment %>
        <%= form.file_field :sla_attachment %>
      </div>

      <div class="field">
        <%= form.label :data_type_id, class: "mandatory" %>
        <%= form.collection_select :data_type_id, DataType.all, :id, :name, {include_blank: "Select"}, required: true   %>
      </div>

      <div class="field">
        <%= form.label :attachments %>
        <%= form.file_field :attachments, multiple: true %>
      </div>

      <%= form.hidden_field :incomplete %>

    </div>
  </div>

  <div class="action-area">
    <div class="actions">
      <%= form.submit %>
      <button name="incomplete" class="btn-incomplete">Save Incomplete Form</button>
    </div>
  </div>
<% end %>
