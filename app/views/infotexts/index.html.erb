<h1>Application Settings</h1>

<div class="flex flex-col h-2/3">
  <div class="lex-grow overflow-auto shadow rounded-md">
    <table class="relative w-full">

      <thead>
        <tr>
          <th scope="col" class="audit-th">Location</th>
          <th scope="col" class="audit-th">Content</th>
          <th scope="col" class="audit-th">Action</th>
        </tr>
      </thead>

      <tbody>
        <% @infotexts.each do |infotext| %>
          <tr class="border-b border-gray-100">
            <td class="audit-td border-r-2 border-dotted"><%= infotext.location %></td>
            <td class="audit-td text-left"><%= infotext.content %></td>
            <td class="audit-td">
              <ul>
                <li class= "action-link"><%= link_to 'Show', infotext %></li>
                <li class= "action-link"><%= link_to 'Edit', edit_infotext_path(infotext) %></li>
              </ul>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
