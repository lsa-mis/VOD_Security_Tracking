
<%= form_with(model: infotext) do |form| %>
  <%= render "partials/errors", object: @infotext %>

  <div class="form-container">
    <div class="field-container">
      <div class="field">
        <span class="font-bold"><%= "Location: #{@infotext.location.gsub('_', ' ').upcase}" %></span>
      </div>

      <div class="field">
        <%= form.label :content %>
        <%= form.rich_text_area :content %>
      </div>
    </div>
  </div>

  <div class="action-area">
    <div class="actions">
      <%= form.submit 'Submit' %>
    </div>
  </div>
<% end %>
