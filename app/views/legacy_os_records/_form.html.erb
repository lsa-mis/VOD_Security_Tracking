<%= form_with(model: legacy_os_record) do |form| %>
  <% if legacy_os_record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(legacy_os_record.errors.count, "error") %> prohibited this legacy_os_record from being saved:</h2>

      <ul>
        <% legacy_os_record.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
  <font color="red">**</font> - mandatory fields<br>
  <font color="red">*</font> - requered fields; to save without these fields check the [incomplete] checkbox<br>
  <font color="red">*/*</font> - Either Or is requered
  </div>


  <div class="field">
    <%= form.label :owner_username %><font color="red">**</font>
    <%= form.text_field :owner_username, required: true %>
  </div>

  <div class="field">
    <%= form.label :owner_full_name %><font color="red">**</font>
    <%= form.text_field :owner_full_name, required: true  %>
  </div>

  <div class="field">
    <%= form.label :dept %><font color="red">*</font>
    <%= form.text_field :dept %>
  </div>

  <div class="field">
    <%= form.label :phone %><font color="red">*</font>
    <%= form.text_field :phone %>
  </div>

  <div class="field">
    <%= form.label :additional_dept_contact %>
    <%= form.text_field :additional_dept_contact %>
  </div>

  <div class="field">
    <%= form.label :additional_dept_contact_phone %>
    <%= form.text_field :additional_dept_contact_phone %>
  </div>

  <div class="field">
    <%= form.label :support_poc %><font color="red">*</font>
    <%= form.text_field :support_poc %>
  </div>

  <div class="field">
    <%= form.label :legacy_os %><font color="red">**</font>
    <%= form.text_field :legacy_os, required: true  %>
  </div>

  <div class="field">
    <%= form.label :unique_app %><font color="red">*/*</font>
    <%= form.text_field :unique_app %>
  </div>

  <div class="field">
    <%= form.label :unique_hardware %><font color="red">*/*</font>
    <%= form.text_field :unique_hardware %>
  </div>

  <div class="field">
    <%= form.label :unique_date %><font color="red">*</font>
    <%= form.date_select :unique_date, include_blank: true, start_year: Date.current.year %>
  </div>

  <div class="field">
    <%= form.label :remediation %><font color="red">**</font>
    <%= form.text_field :remediation, required: true  %>
  </div>

  <div class="field">
    <%= form.label :exception_approval_date %>
    <%= form.date_select :exception_approval_date, include_blank: true, start_year: Date.current.year %>
  </div>

  <div class="field">
    <%= form.label :review_date %>
    <%= form.date_select :review_date, include_blank: true, start_year: Date.current.year %>
  </div>

  <div class="field">
    <%= form.label :review_contact %><font color="red">**</font>
    <%= form.text_field :review_contact, required: true  %>
  </div>

  <div class="field">
    <%= form.label :justification %>
    <%= form.text_field :justification %>
  </div>

  <div class="field">
    <%= form.label :local_it_support_group %><font color="red">*</font>
    <%= form.text_field :local_it_support_group %>
  </div>

  <div class="field">
    <%= form.label :notes %>
    <%= form.text_area :notes %>
  </div>

  <div class="field">
    <%= form.label :data_type_id%><font color="red">**</font>
    <%= form.collection_select :data_type_id, DataType.all, :id, :name, {include_blank: "Select"}, required: true  %>
  </div>

  <div>
  <%= form.label "Add a device" %><font color="red">**</font> - enter serial:
    <%= form.fields_for :device, Device.new do |d| %>
      <%= d.text_field :serial %>
      or hostname:
      <%= d.text_field :hostname %>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :attachments %>
    <%= form.file_field :attachments, multiple: true %>
  </div>

  <div class="field">
    <%= form.label :incomplete %>
    <%= form.check_box :incomplete %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= javascript_pack_tag 'check_device_presence' %>

