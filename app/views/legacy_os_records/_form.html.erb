<%= form_with(model: @legacy_os_record, html: {
  local: true
},
data: {
  controller: "legacyos",
  target: "legacyos.form",
  action: "submit->legacyos#submitForm"
}) do |form| %>
  <% if @legacy_os_record.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@legacy_os_record.errors.count, "error") %> prohibited this legacy_os_record from being saved:</h2>

      <ul>
        <% @legacy_os_record.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-container">
    <div>
      <h3 class="instruction-header">
        Special Fields
      </h3>
      <ul class="instruction-container">
        <li class="mandatory">mandatory fields</li>
        <li class="required">required fields => to save as an incomplete record without these fields click the [Save Incomplete Form] button.</li>
      </ul>
    </div>

    <div class="field-container">
      <div class="field">
        <%= form.label :owner_username, class: 'mandatory' %>
        <%= form.text_field :owner_username, required: true  %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :owner_full_name, class: 'mandatory' %>
        <%= form.text_field :owner_full_name, required: true  %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :dept, class: 'required' %>
        <%= form.text_field :dept %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :phone, class: 'required' %>
        <%= form.text_field :phone %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :additional_dept_contact %>
        <%= form.text_field :additional_dept_contact %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :additional_dept_contact_phone %>
        <%= form.text_field :additional_dept_contact_phone %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :support_poc, class: 'required' %>
        <%= form.text_field :support_poc %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :legacy_os, class: 'mandatory' %>
        <%= form.text_field :legacy_os, required: true  %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="sm:col-span-3">
        <%= form.label :unique_app, class: 'required' %>
        <%= form.text_field :unique_app %>
        <p class="help-text">Unique app or Unique Hardware is required</p>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="sm:col-span-3">
        <%= form.label :unique_hardware, class: 'required' %>
        <%= form.text_field :unique_hardware %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :unique_date, class: 'required' %>
        <%= form.text_field :unique_date,
          data: {
            controller: "flatpickr",
            flatpickr_date_format: "Y-m-d",
            flatpickr_min_date: Time.zone.now
          },
          required: true 
        %>
      </div>

      <div class="field">
        <%= form.label :remediation, class: 'mandatory' %>
        <%= form.text_field :remediation, required: true  %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :exception_approval_date %>
        <%= form.text_field :exception_approval_date,
          data: {
            controller: "flatpickr",
            flatpickr_date_format: "Y-m-d",
            flatpickr_min_date: Time.zone.now
          }
        %>
      </div>

      <div class="field">
        <%= form.label :review_date %>
        <%= form.text_field :review_date,
          data: {
            controller: "flatpickr",
            flatpickr_date_format: "Y-m-d",
            flatpickr_min_date: Time.zone.now
          }
        %>
      </div>

      <div class="field">
        <%= form.label :review_contact, class: 'mandatory' %>
        <%= form.text_field :review_contact, required: true  %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :justification %>
        <%= form.text_field :justification %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :local_it_support_group, class: 'required' %>
        <%= form.text_field :local_it_support_group %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :notes %>
        <%= form.text_area :notes %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
        <%= form.label :data_type_id, class: 'mandatory' %>
        <%= form.collection_select :data_type_id, DataType.all, :id, :name, {include_blank: "Select"}, required: true %>
      </div>

      <div id="device_input" data-legacyos-target="system_device">
        <%= form.label "Add a device", class: 'mandatory' %> - enter serial:
        <%= form.fields_for :device, @device do |device_attributes| %>
          <%= device_attributes.text_field :serial, :"data-legacyos-target" => "serial" %>
          or hostname:
          <%= device_attributes.text_field :hostname, :"data-legacyos-target" => "hostname" %>
        <% end %>
        <p class="help-text">Help text if needed</p>
      </div>

      <div class="field">
          <%= form.label :attachments %>
          <%= form.file_field :attachments, multiple: true %>
      </div>

      <%= form.hidden_field :incomplete %>

    </div>
  </div>

  <div class="action-area">
    <div class="actions">
      <%= form.submit %>
      <button name="incomplete" class="btn-incomplete">Save Incomplete Form</button>
    </div>
  </div>
<% end %>
