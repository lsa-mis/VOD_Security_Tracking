<h1>It Security Incidents</h1>
<p class="text-gray-500 text-sm mx-4">
  It Security Incidents
</p>

<div>
  <button type="button" class="bg-white rounded-md font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
  Filters
  </button>
  
  <div class="m-4">
    <div class="form-container">
      <div class="field-container">
        <%= search_form_for @q do |f| %>
          <div class="field flex flex-row flex-nowrap justify-items-start items-center">
            
            <%= f.label "Group searching conditions by:" %>
            <div class="w-1/3 pl-2">
              <%= f.radio_button :m, 'and', :checked => true %>
              <%= f.label :m, 'and', value: 'and' %>
              <%= f.radio_button :m, 'or' %>
              <%= f.label :m, 'or', value: 'or' %>
            </div>
          </div>
          <div class="field flex flex-row flex-nowrap justify-items-start items-center">
            <%= f.label :date %>
            <div class="w-1/3 pr-4 pl-2">
              <%= f.text_field :date_gteq, placeholder: "From",
              data: {
                controller: "flatpickr",
                flatpickr_date_format: "Y-m-d",
                flatpickr_min_date: Time.zone.now
              } %>
            </div>

            <div class="w-1/3">
              <%= f.text_field :date_lteq, placeholder: "To",
              data: {
                controller: "flatpickr",
                flatpickr_date_format: "Y-m-d",
                flatpickr_min_date: Time.zone.now
              } %>
            </div>
          </div>
          <div class="field flex flex-row flex-nowrap justify-items-start items-center">
            <%= f.label :people_involved %>
            <div class="w-1/2 pl-2">
              <%= f.text_field :people_involved_cont, placeholder: "Contains", class: 'form-control' %>
            </div>
          </div>
          <div class="field flex flex-row flex-nowrap justify-items-start items-center">
            <%= f.label :equipment_involved %>
            <div class="w-1/2 pl-2">
              <%= f.text_field :equipment_involved_cont, placeholder: "Contains", class: 'form-control' %>


            
            </div>
          </div>
          <%= link_to "Clear", request.path, class: "btn btn-default" %>
          <%= f.submit class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>  
</div>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <% if has_ad_access?(current_user, "it_security_incidents", "newedit_action") %>
    <div class="btn-new btn-blue" role="menu" aria-orientation="vertical" aria-labelledby="mobile-menu-button" tabindex="-1">
      <%= link_to 'New It Security Incident', new_it_security_incident_path %>
    </div>
  <% end %>

  <div class="flex flex-col">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
        <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
          <table>
            <thead>
              <tr>
                <th scope="col">Actions</th>
                <th scope="col">Date</th>
                <th scope="col">People involved</th>
                <th scope="col">Equipment involved</th>
                <th scope="col">Remediation steps</th>
                <th scope="col">Estimated finacial cost</th>
                <th scope="col">Notes</th>
                <th scope="col">It security incident status</th>
                <th scope="col">Data type</th>
              </tr>
            </thead>

            <tbody>
              <% @it_security_incidents.each do |it_security_incident| %>
                <tr>
                  <td>
                    <ul>
                      <li><%= link_to 'Show', it_security_incident, class: "action-link" %></li>
                      <% if has_ad_access?(current_user, "it_security_incidents", "newedit_action") %>
                        <li><%= link_to 'Edit', edit_it_security_incident_path(it_security_incident), class: "action-link" %></li>
                      <% end %>
                      <% if has_ad_access?(current_user, "it_security_incidents", "archive_action") %>
                        <li><%= link_to 'Archive', archive_it_security_incident_path(it_security_incident), class: "action-link",  method: :post, data: { confirm: 'Are you sure?' } %></li>
                      <% end %>
                      <% if has_ad_access?(current_user, "it_security_incidents", "audit_action") %>
                        <li><%= link_to 'Audit', it_security_incident_audit_log_path(it_security_incident), class: "action-link" %></li>
                      <% end %>
                    </ul>
                  </td> 
                  <td><%= it_security_incident.date %></td>
                  <td><%= it_security_incident.people_involved %></td>
                  <td><%= it_security_incident.equipment_involved %></td>
                  <td><%= it_security_incident.remediation_steps %></td>
                  <td><%= it_security_incident.estimated_financial_cost %></td>
                  <td><%= it_security_incident.notes %></td>
                  <td><%= it_security_incident.it_security_incident_status_id %></td>
                  <td><%= it_security_incident.data_type_id %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>