<h1>IT Security Incidents</h1>

<p class="text-gray-500 text-sm mx-4">
  IT Security Incidents
</p>

<div data-controller='toggle' class="m-2">
  <button type="button" class="bg-white rounded-md font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
    data-action='click->toggle#toggle touch->toggle#toggle' >
  Filters
  </button>

  <div data-toggle-target='toggleable' class="m-4 hidden">
    <div class="form-container">
      <div class="field-container">
        <%= search_form_for @q, 
          data:{ controller: "filters"} do |f| %>
          <div class="field flex flex-row flex-nowrap justify-items-start items-center">
            <%= f.label "Group searching conditions by:" %>
            <div class="pl-4">
              <%= f.radio_button :m, 'and', :checked => true %>
              <%= f.label :m, 'and', value: 'and' %>
            </div>
            <div class="pl-4">
              <%= f.radio_button :m, 'or' %>
              <%= f.label :m, 'or', value: 'or' %>
            </div>
          </div>
          <div class="field flex flex-row flex-nowrap justify-items-start items-center">
            <%= f.label :date %>
            <div class="w-1/3 pr-4 pl-2">
              <%= f.text_field :date_gteq, placeholder: "From",
              data: {
                controller: "flatpickr",
                flatpickr_date_format: "Y-m-d"
              } %>
            </div>

            <div class="w-1/3">
              <%= f.text_field :date_lteq, placeholder: "To",
              data: {
                controller: "flatpickr",
                flatpickr_date_format: "Y-m-d"
              } %>
            </div>
          </div>
          <div class="field flex flex-row flex-nowrap justify-items-start items-center">
            <%= f.label :people_involved %>
            <div class="w-1/2 pl-2">
              <%= f.text_field :people_involved_cont, placeholder: "Contains", class: 'form-control' %>
            </div>
          </div>
          <div class="field flex flex-row flex-nowrap justify-items-start items-center">
            <%= f.label :equipment_involved %>
            <div class="w-1/2 pl-2">
              <%= f.text_field :equipment_involved_cont, placeholder: "Contains", class: 'form-control' %>
            </div>
          </div>
          <div class="field flex flex-row flex-nowrap justify-items-start items-center">
            <%= f.label :remediation_steps %>
            <div class="w-1/2 pl-2">
              <%= f.text_field :remediation_steps_cont, placeholder: "Contains", class: 'form-control' %>
            </div>
          </div>

          <div class="field flex flex-row flex-nowrap justify-items-start items-center">
            <%= f.label :estimated_financial_cost %>
            <div class="w-1/3 pr-4 pl-2">
              <%= f.text_field :estimated_financial_cost_gteq, placeholder: "From", class: 'form-control' %>
            </div>
            <div class="w-1/3">
              <%= f.text_field :estimated_financial_cost_lteq, placeholder: "To", class: 'form-control' %>
            </div>
          </div>
          <div class="field flex flex-row flex-nowrap justify-items-start items-center">
            <%= f.label :notes %>
            <div class="w-1/2 pl-2">
              <%= f.text_field :notes_cont, placeholder: "Contains", class: 'form-control' %>
            </div>
          </div>
          <div class="field flex flex-row flex-nowrap justify-items-start items-center">
            <%= f.label :it_security_incident_status_id, "IT security incident status" %>
            <div class="w-1/2 pl-2">
              <%= f.collection_select :it_security_incident_status_id_eq, @it_security_incident_status, :id, :name, include_blank: "Select ...", class: 'form-control' %>
            </div>
          </div>
          <div class="field flex flex-row flex-nowrap justify-items-start items-center">
            <%= f.label :data_type_id %>
            <div class="w-1/2 pl-2">
              <%= f.collection_select :data_type_id_eq, @data_type, :id, :name, include_blank: "Select ...", class: 'form-control' %>
            </div>
          </div>

          <button type="button" class="bg-white rounded-md font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
            data-action='click->filters#clearFilters'>
            Clear
          </button>
          <%= f.submit 'Search', data: { disable_with: false }, class: 'btn btn-primary' %>

        <% end %>
      </div>
    </div>
  </div> 
</div>

<div>
  <% if has_ad_access?(current_user, "it_security_incidents", "newedit_action") %>
    <div class="btn-new btn-blue" role="menu" aria-orientation="vertical" aria-labelledby="mobile-menu-button" tabindex="-1">
      <%= link_to 'New IT Security Incident', new_it_security_incident_path %>
    </div>
  <% end %>
  <%= render partial: "it_security_incidents/listing" %>
</div>