<h1>Devices</h1>

<table>
  <thead>
    <tr>
      <th>Serial</th>
      <th>Hostname</th>
      <th>Mac</th>
      <th>Manufacturer</th>
      <th>Model</th>
      <th>Owner</th>
      <th>Department</th>
      <th>Building</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.serial %></td>
        <td><%= device.hostname %></td>
        <td><%= device.mac %></td>
        <td><%= device.manufacturer %></td>
        <td><%= device.model %></td>
        <td><%= device.owner %></td>
        <td><%= device.department %></td>
        <td><%= device.building %></td>
        <td><%= device.room %></td>
        <td><%= link_to 'Show', device %></td>
        <td><%= link_to 'Update', update_device_path(device) %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Device', new_device_path %>
