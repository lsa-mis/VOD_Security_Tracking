<%= form_with(model: sensitive_data_system) do |form| %>
  <% if sensitive_data_system.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sensitive_data_system.errors.count, "error") %> prohibited this sensitive_data_system from being saved:</h2>

      <ul>
        <% sensitive_data_system.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-container">
    <div>
      <h3 class="instruction-header">
        Special Fields
      </h3>
      <ul class="instruction-container">
        <li class="mandatory">mandatory fields</li>
        <li class="required">required fields => to save as an incomplete record without these fields click the [Save Incomplete Form] button.</li>
      </ul>
    </div>

    <div class="field-container">
      <div class="field">
        <%= form.label :owner_username, class: "mandatory" %>
        <%= form.text_field :owner_username, required: true  %>
      </div>

      <div class="field">
        <%= form.label :owner_full_name, class: "mandatory" %>
        <%= form.text_field :owner_full_name, required: true  %>
      </div>

      <div class="field">
        <%= form.label :dept, class: "required" %>
        <%= form.text_field :dept %>
      </div>

      <div class="field">
        <%= form.label :phone %>
        <%= form.text_field :phone %>
      </div>

      <div class="field">
        <%= form.label :additional_dept_contact %>
        <%= form.text_field :additional_dept_contact %>
      </div>

      <div class="field">
        <%= form.label :additional_dept_contact_phone %>
        <%= form.text_field :additional_dept_contact_phone %>
      </div>

      <div class="field">
        <%= form.label :support_poc, class: "required" %>
        <%= form.text_field :support_poc %>
      </div>

      <div class="field">
        <%= form.label :expected_duration_of_data_retention %>
        <%= form.text_area :expected_duration_of_data_retention %>
      </div>

      <div class="field">
        <%= form.label :agreements_related_to_data_types %>
        <%= form.text_field :agreements_related_to_data_types %>
      </div>

      <div class="field">
        <%= form.label :review_date, class: "mandatory" %>
        <%= form.text_field :review_date,
          data: {
            controller: "flatpickr",
            flatpickr_date_format: "Y-m-d",
            flatpickr_min_date: Time.zone.now
          },
          required: true 
        %>
      </div>

      <div class="field">
        <%= form.label :review_contact, class: "mandatory" %>
        <%= form.text_field :review_contact, required: true  %>
      </div>

      <div class="field">
        <%= form.label :notes %>
        <%= form.text_field :notes %>
      </div>

      <div class="field">
        <%= form.label :storage_location_id, class: "mandatory" %>
        <%= form.collection_select :storage_location_id, StorageLocation.all, :id, :name, {include_blank: "Select"}, required: true %>

      </div>

      <div class="field">
        <%= form.label :data_type_id, class: "mandatory" %>
        <%= form.collection_select :data_type_id, DataType.all, :id, :name, {include_blank: "Select"}, required: true %>
      </div>

      <div class="field">
        <%= form.label :device_id, class: "mandatory" %>
        <%= form.collection_select :device_id, Device.all, :id, :display_name, {include_blank: "Select"}, required: true %>
      </div>

      <div class="field">
        <%= form.label :attachments %>
        <%= form.file_field :attachments, multiple: true %>
      </div>

      <%= form.hidden_field :incomplete %>

    </div>
  </div>

  <div class="action-area">
    <div class="actions">
      <%= form.submit %>
      <button name="incomplete" class="btn-incomplete">Save Incomplete Form</button>
    </div>
  </div>
<% end %>